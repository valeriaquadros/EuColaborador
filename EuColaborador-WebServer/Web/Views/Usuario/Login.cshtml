@model LoginUsuarioInputModel

@{
    ViewData["Title"] = "Login";
}

<h1>@ViewData["Title"]</h1>
@await Html.PartialAsync("_StatusMessage", ViewData["StatusMessage"])
<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <h4>Use sua conta para fazer login</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="@Model.Login"></label>
                    <input asp-for="@Model.Login" class="form-control" />
                    <span asp-validation-for="@Model.Login" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Password"></label>
                    <input asp-for="@Model.Password" class="form-control" />
                    <span asp-validation-for="@Model.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Login</button>
                </div>
                <div class="form-group">
                    <p>
                        <a id="forgot-password" asp-controller="Usuario" asp-action="RecuperarSenha">Esqueci minha senha</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
