@model ResetSenhaInputModel
@{
    ViewData["Title"] = "Recuperação de senha";
}

<h1>@ViewData["Title"]</h1>
<h4>Cadastre uma nova senha.</h4>
<hr />
@await Html.PartialAsync("_StatusMessage", ViewData["StatusMessage"])
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input asp-for="@Model.Code" type="hidden" />
            <div class="form-group">
                <label asp-for="@Model.Email"></label>
                <input asp-for="@Model.Email" class="form-control" />
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Senha"></label>
                <input asp-for="@Model.Senha" class="form-control" />
                <span asp-validation-for="@Model.Senha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.ConfirmacaoSenha"></label>
                <input asp-for="@Model.ConfirmacaoSenha" class="form-control" />
                <span asp-validation-for="@Model.ConfirmacaoSenha" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Alterar senha</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
