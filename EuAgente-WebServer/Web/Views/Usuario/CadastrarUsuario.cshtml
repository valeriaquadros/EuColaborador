@model UsuarioInputModel
@{
    ViewData["Title"] = "Cadastrar administrador";
}

@await Html.PartialAsync("_StatusMessage", ViewData["StatusMessage"])
<div class="row justify-content-md-center">
    <div class="col-md-4">
        <form id="profile-form" method="post">
            <h4>Crie um novo usuário administrador</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.Nome"></label>
                <input asp-for="@Model.Nome" class="form-control" />
                <span asp-validation-for="@Model.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.CPF"></label>
                <input asp-for="@Model.CPF" class="form-control" data-mask="000.000.000-00" data-mask-reverse="true"/>
                <span asp-validation-for="@Model.CPF" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Email"></label>
                <input asp-for="@Model.Email" class="form-control" />
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.DataNascimento"></label>
                <input asp-for="@Model.DataNascimento" class="form-control" />
                <span asp-validation-for="@Model.DataNascimento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Sexo"></label>
                <span asp-validation-for="@Model.Sexo" class="text-danger"></span>
                <div class="toggle">
                    <input type="radio" asp-for="@Model.Sexo" value="F" id="Feminino" name="Sexo" />
                    <label for="Feminino">Feminino</label>
                    <input type="radio" asp-for="@Model.Sexo" value="M" id="Masculino" name="Sexo" />
                    <label for="Masculino">Masculino</label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Password"></label>
                <input asp-for="@Model.Password" class="form-control" />
                <span asp-validation-for="@Model.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.ConfirmacaoSenha"></label>
                <input asp-for="@Model.ConfirmacaoSenha" class="form-control" />
                <span asp-validation-for="@Model.ConfirmacaoSenha" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Cadastrar</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script type='text/javascript' src='https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.10/jquery.mask.min.js'></script>
}
